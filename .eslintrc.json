{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "es2017": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:sonarjs/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "."
  },
  "plugins": [
    "@typescript-eslint",
    "sonarjs"
  ],
  "rules": {
    "require-jsdoc": "off"
  }
}